@model bi130168d.Models.Auction

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Auctions", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Auction</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "disabledInput", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Time, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Time, new { @class = "form-control", @id = "disabledInput", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    var modell = Model.ID;
                }
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @id = "disabledInput", @readonly = "readonly" })
                [
                @Html.ActionLink("Change price", "ChangePrice",
               routeValues: new { startingPrice = Model.Price, id = Model.ID })
                ]
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.CreatedTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CreatedTime, new { @class = "form-control", @id = "disabledInput", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OpenedTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OpenedTime, new { @class = "form-control", @id = "disabledInput", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClosedTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ClosedTime, new { @class = "form-control", @id = "disabledInput", @readonly = "readonly" })
            </div>
        </div>
        @Html.HiddenFor(model => model.Active)
        <div class="form-group">
            @Html.LabelFor(model => model.State, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.State)
                @Html.HiddenFor(model => model.State)
            </div>
        </div>

        @Html.HiddenFor(model => model.PriceGrowth)

        <div class="form-group">
            @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @HtmlImage.showimage(Model.Image)
                @Html.HiddenFor(model => model.Image)
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Auctions")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
